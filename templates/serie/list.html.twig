{% extends '/base.html.twig' %}

{% block body %}
    <h1>List of Series !</h1>
    <section class="series-list">
        {% for serie in series %}
            <a href="{{ path('serie_show', {'id': serie.id}) }}" title="View details about {{ serie.name }}">
                <img src="{{ asset('img/posters/series/' ~ serie.poster) }}" alt="{{ serie.name }}">
            </a>

        {% endfor %}
    </section>
{% endblock %}

{% block title %}
    {# parent() récupère le contenu du bloc parent #}
    {{ parent() }} | List
{% endblock %}